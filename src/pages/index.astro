---
// Components
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import ResponsiveImg from "../components/ResponsiveImg.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
// styles
import "../styles/pages/_index.scss";

// assets
import glow from "../assets/glowing-eclipse.svg";
import photo1 from "../assets/photo1.png";
import photo2 from "../assets/photo2.png";
import photo3 from "../assets/photo3.png";
import photo4 from "../assets/photo4.png";
import cameraEquipment from "../assets/camera-equipment.png";
import heroBackground from "../assets/home-hero-bg.png";
import heroBackgroundMb from "../assets/home-hero-bg-mb.png";
import heroBackground2 from "../assets/home-hero-bg-2.png";
import heroBackground2Mb from "../assets/home-hero-bg-2-mb.png";
import heroBackground3 from "../assets/home-hero-bg-3.png";
import heroBackground3Mb from "../assets/home-hero-bg-3-mb.png";

// icons
import audioElement from "../icons/audio-element.svg";
import budgetIcon from "../icons/budget-icon.svg";
import locationIcon from "../icons/location-icon.svg";
import techIcon from "../icons/tech-icon.svg";
import reliabilityIcon from "../icons/reliability-icon.svg";
---

<Layout
  title="Home - Ahadu Global Network"
  description="A premier media production and studio rental company based in Washington D.C."
>
  <div class="loader">
    <div class="logo-animation">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="279"
        height="114"
        fill="none"
      >
