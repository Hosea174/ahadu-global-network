---
// Components
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

// styles
import "../styles/pages/_services.scss";

// assets
import glow from "../assets/glowing-eclipse.svg";
import designElement from "../assets/design-element.svg";
import audioElement from "../icons/audio-element.svg";
import servicesHeroImg from "../assets/services-hero-img.png";
import worldWideContent from "../assets/world-wide-content.png";
import liveStreaming from "../assets/live-streaming.png";
import stage from "../assets/stage.png";
import controlRoom from "../assets/control-room.png";
import studio from "../assets/studio.png";
import workspace from "../assets/workspace.png";

// icons
import plus from "../icons/plus.svg";
import minus from "../icons/minus.svg";
---

<Layout
  title="Services - Ahadu Global Network"
  description="Explore our services at Ahadu Global Network"
>
  <Header />

  <main>
    <section class="services-hero-section">
      <div class="container wrapper">
        <div class="hero-header">
          <h1 class="font-header-1">World-Class Media Production Solutions</h1>
          <img src={designElement.src} alt="" />
        </div>
        <div class="hero-content">
          <img src={servicesHeroImg.src} alt="" />
          <div class="hero-text">
            <div class="services-description">
              <img src={audioElement.src} alt="" />
            </div>
            <p>
              Our media production services offer a comprehensive solution for
              your content needs. From delivering high-quality content to a
              global audience to providing state-of-the-art facilities for live
              streaming, production, and post-production, we have everything you
              need to bring your vision to life.
            </p>
            <a href="#">Scroll down</a>
          </div>
        </div>
      </div>
    </section>

    <section class="benefits-section">
      <div class="container wrapper">
        <div class="benefits col-1">
          <div class="accordion">
            <div
              class="accordion-item active"
              data-image-src={worldWideContent.src}
            >
              <div class="accordion-header">
                <h3 class="font-header-3">World-Wide Content Delivery</h3>
                <!-- <div class="icon">
                  <img src={plus.src} alt="">
                </div> -->
              </div>
              <div class="accordion-content">
                <p>
                  Our advanced technology ensures your content is seamlessly
                  delivered to a global audience, maximizing your reach and
                  impact.
                </p>
              </div>
            </div>
            <div class="accordion-item" data-image-src={liveStreaming.src}>
              <div class="accordion-header">
                <h3 class="font-header-3">Seamless Live Streaming</h3>
                <!-- <div class="icon">
                  <img src={plus.src} alt="">
                </div> -->
              </div>
              <div class="accordion-content">
                <p>
                  Deliver flawless live streaming across multiple platforms,
                  engaging your audience with high-quality, real-time broadcasts
                  every time.
                </p>
              </div>
            </div>
            <div class="accordion-item" data-image-src={stage.src}>
              <div class="accordion-header">
                <h3 class="font-header-3">Audience-Rated Stages</h3>
                <!-- <div class="icon">
                  <img src={plus.src} alt="">
                </div> -->
              </div>
              <div class="accordion-content">
                <p>
                  Our versatile, fully equipped stages are designed for
                  productions of all sizes, offering the flexibility and
                  convenience to bring any vision to life.
                </p>
              </div>
            </div>
            <div class="accordion-item" data-image-src={controlRoom.src}>
              <div class="accordion-header">
                <h3 class="font-header-3">High-tech Control Rooms</h3>
                <!-- <div class="icon">
                  <img src={plus.src} alt="">
                </div> -->
              </div>
              <div class="accordion-content">
                <p>
                  Our 4K control rooms deliver top-tier production quality while
                  streamlining processes, saving you time and ensuring flawless
                  execution.
                </p>
              </div>
            </div>
            <div class="accordion-item" data-image-src={studio.src}>
              <div class="accordion-header">
                <h3 class="font-header-3">Full Equipment Studio Rental</h3>
                <!-- <div class="icon">
                  <img src={plus.src} alt="">
                </div> -->
              </div>
              <div class="accordion-content">
                <p>
                  Get everything you need for a professional shoot with our
                  fully equipped studio rental, supported by expert staff to
                  ensure every detail is perfect.
                </p>
              </div>
            </div>
            <div class="accordion-item" data-image-src={workspace.src}>
              <div class="accordion-header">
                <h3 class="font-header-3">Post-Production Workspace</h3>
                <!-- <div class="icon">
                  <img src={plus.src} alt="">
                </div> -->
              </div>
              <div class="accordion-content">
                <p>
                  Work efficiently in our high-performance post-production
                  spaces, equipped with cutting-edge technology to bring your
                  projects to life with precision and creativity.
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-2">
          <h2 class="font-header-2 fw-bold">
            Get industry-leading media production, with every project delivered
            to the highest standards.
          </h2>
          <div class="img-wrap"><img src={worldWideContent.src} alt="" /></div>
        </div>
      </div>
    </section>
  </main>
  <!-- <Footer/> -->
</Layout>

<script src="../scripts/pages/services.js"></script>
