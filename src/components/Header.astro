---
// Component imports
import Button from "../components/Button.astro";
import { Icon } from "astro-icon/components";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const isNavLight = typeof className === "string" && className.includes("nav-light");

const buttonClass = isNavLight
  ? "btn-secondary btn-light"
  : "btn-secondary btn-dark";
---

<header>
  <div class:list={["header-wrapper", "container", className]}>
    <a href="/" aria-label="Home" class="logo-link"
      ><Icon name="logo" size={100} /></a
    >

    <nav class="nav-menu">
      <ul role="list" class="nav-links">
        <li class="nav-link">
          <a href="/" class="active" aria-label="Home" data-page="home">Home</a>
        </li>
        <li class="nav-link">
          <a href="/about" aria-label="About" data-page="about">About</a>
        </li>
        <li class="nav-link">
          <a href="/contact" aria-label="Contact" data-page="contact">Contact</a
          >
        </li>
        <li class="nav-link">
          <a href="/services" aria-label="Services">Services</a>
        </li>
        <li class="nav-link">
          <a href="/gallery" aria-label="Gallery">Gallery</a>
        </li>
      </ul>
    </nav>

    <Button
      href="/contact"
      class={buttonClass}
      text="Contact Us"
      icon={isNavLight ? "message-light": "message"}
    />
  </div>
</header>
